// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Song {
  id        Int  @id @default(autoincrement())
  title     String
  artist    String?
  lyrics    String
  arrangements  SongArrangement[] @relation("Arrangements")
}

model SongArrangement {
  id               Int  @id @default(autoincrement())
  units            Unit[] @relation("Units")
  unitMap          String
  song             Song @relation("Arrangements", fields: [songId], references: [id])
  songId           Int
  isDefault        Boolean @default(true)
  deleted          Boolean @default(false)
}

model Unit {
  id             Int  @id @default(autoincrement())
  title          String?
  content        String
  type           UnitType   @default(NEUTRAL)
  localId        Int
  songArrangement    SongArrangement @relation("Units", fields: [songArrangementId], references: [id])
  songArrangementId  Int
}

enum UnitType {
  SONG_INTRO
  SONG_ENDING
  SONG_VERSE
  SONG_PRECHORUS
  SONG_CHORUS
  SONG_BRIDGE
  SONG_INTERLUDE
  SONG_SOLO
  SONG_BLOCK
}
