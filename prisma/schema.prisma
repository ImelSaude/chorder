// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Song {
  id        Int  @id @default(autoincrement())
  title     String
  artist    String?
  lyrics    String
  arrangements  SongArrangement[] @relation("Arrangements")
}

model SongArrangement {
  id               Int  @id @default(autoincrement())
  song             Song @relation("Arrangements", fields: [songId], references: [id])
  songId           Int
  units            ArrangementUnit[]
  isDefault        Boolean @default(true)
  deleted          Boolean @default(false)
}

model Unit {
  id             Int  @id @default(autoincrement())
  title          String?
  content        String
  type           UnitType   @default(SONG_BLOCK)
  localUID       String?
  arrangements   ArrangementUnit[]
}

model ArrangementUnit {
  id                   Int  @id @default(autoincrement())
  arrangement          SongArrangement  @relation(fields: [arrangementId], references: [id])
  arrangementId        Int
  unit                 Unit  @relation(fields: [unitId], references: [id])
  unitId               Int
  indexInArrangement   Int
}

enum UnitType {
  SONG_INTRO
  SONG_ENDING
  SONG_VERSE
  SONG_PRECHORUS
  SONG_CHORUS
  SONG_BRIDGE
  SONG_INTERLUDE
  SONG_SOLO
  SONG_BLOCK
}
